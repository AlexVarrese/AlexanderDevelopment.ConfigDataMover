<Window x:Class="AlexanderDevelopment.ConfigDataMover.Wpf.JobError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlexanderDevelopment.ConfigDataMover.Wpf"
        mc:Ignorable="d"
        Title="Fatal job error" Height="313.314" Width="300" ShowInTaskbar="False" ResizeMode="NoResize">
    <StackPanel>
        <Label x:Name="messageLabel">Error</Label>
        <TextBlock x:Name="messageTextBox" Height="50" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBlock>
        <Label x:Name="errorLabel">Error details</Label>
        <TextBlock x:Name="errorTextBox" Height="150"  ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBlock>
        <Button Padding="2" HorizontalAlignment="Center" Margin="4" Click="Button_Click">Copy error text to clipboard</Button>
    </StackPanel>
</Window>

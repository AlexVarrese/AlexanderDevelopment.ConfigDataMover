<Window x:Class="AlexanderDevelopment.ConfigDataMover.Wpf.CheckLatestVersion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlexanderDevelopment.ConfigDataMover.Wpf"
        mc:Ignorable="d"
        Title="Check for latest version" Height="200" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="label1" Margin="5" Height="100" VerticalAlignment="Top" Grid.Row="0"></Label>
        <TextBlock Margin="5" Grid.Row="1">
            <Hyperlink NavigateUri="https://github.com/lucasalexander/AlexanderDevelopment.ConfigDataMover/releases/latest" RequestNavigate="Hyperlink_RequestNavigate">
                View latest release on GitHub
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
